{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "windows": {
                "command": "lua.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": [
                "src/flex/flex.lua",
                "clean"
            ],
            "problemMatcher": []
        },{
            "label": "Clean & Flex",
            "type": "shell",
            "windows": {
                "command": "lua.bat",
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "args": [
                "src/flex/flex.lua",
                "clean",
                "glue"
            ],
            "problemMatcher": []
        },{
            "label": "srGlue",
            "type": "shell",
            "windows": {
                "command": "tools\\srglue.exe",
                "args": [
                    "tools\\srlua.exe",
                    "build\\script.lua",
                    "build\\bin\\octagen.exe"
                ],
            },
            "dependsOn":[
                "Clean & Flex"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "runOptions": {
                "instanceLimit": 1
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}